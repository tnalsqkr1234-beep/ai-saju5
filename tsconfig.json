{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["DOM", "ES2019"],
    "downlevelIteration": true,
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "module": "esnext",
    "strict": false,
    "baseUrl": ".",
    "paths": { "@/*": ["*"] }
  },
  "include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
